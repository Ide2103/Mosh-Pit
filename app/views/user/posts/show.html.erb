<h6>投稿詳細</h6>

<div class="card-list-containar py-3">
  <div class="card w-75 mx-auto mt-2 p-1 shadow-sm">
    <div class="col-10">
      <%= image_tag @post.user.get_icon_image(50,50), class: "rounded-circle" %><br>
        <%= @post.user.name %><br>
        <%= l @post.created_at, format: :short %>

      <p><%= @post.post %></p>
        <% @post.post_images.each do |post_image| %>
          <%= image_tag post_image, size: "120x90" %>
        <% end %>
        <% @post.tags.each do |tag| %>
          <%= tag.name %>
        <% end %>
    </div>
    <div class="d-flex justify-content-end">
      <p class="mx-1">
        <p id='bookmark_buttons_<%= @post.id %>'>
          <%= render "/user/bookmarks/bookmark", post: @post %>
        </p>
      </p>
      <td class="mx-1 text-info"><i class="fas fa-comments"></i><%= @post.post_comments.count %></td>
      <p class="mx-2"><%= l @post.created_at, format: :short %></p>
    </div>
  </div>
</div>


<div id='post_comment_<%= @post.id %>'>
  <%= render '/user/post_comments/comment', post_comments: @post.post_comments %>
</div>

<div id='post_comment_post_<%= @post.id %>' class="d-flex justify-content-center">
  <%= render '/user/post_comments/comment_form', post: @post, post_comment: @post_comment %>
</div>

