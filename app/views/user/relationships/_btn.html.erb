<% if current_user != user%>
  <% if current_user.following?(user) %>
    <%= link_to  user_relationships_path(user.id), method: :delete, remote: true, class: "btn btn-dark text-white btn-sm ml-2" do %>
      <i class="fas fa-user-check"></i> フォロー中
    <% end %>
  <% else %>
    <%= link_to user_relationships_path(user.id), method: :post, remote: true, class: "btn btn-outline-dark btn-sm ml-2" do %>
      <i class="fas fa-user-plus"></i> フォローする
    <% end %>
  <% end %>
<% end %>