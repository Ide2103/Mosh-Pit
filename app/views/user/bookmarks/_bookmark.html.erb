<% if post.bookmarked_by?(current_user) %>
  <%= link_to post_bookmarks_path(post.id), method: :delete, remote: true, class: "text-dark" do %>
    <i class="fas fa-star"></i><%= post.bookmarks.count %>
  <% end %>
<% else %>
  <%= link_to post_bookmarks_path(post.id), method: :post, remote: true, class: "text-dark" do %>
    <i class="far fa-star"></i><%= post.bookmarks.count %>
  <% end %>
<% end %>
