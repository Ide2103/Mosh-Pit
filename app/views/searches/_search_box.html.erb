<div class="search_form">
  <%= form_tag(search_path, method: :get) do %>
    <%= text_field_tag "search[content]", "", :placeholder =>"ユーザーや投稿を検索" %>
    <%= select_tag "search[model]", options_for_select({ "ニックネーム" => "user", "投稿" => "post", "コメント" => "post_comment" }) %>
    <%= select_tag "search[method]", options_for_select({ "部分一致" => "partial", "完全一致" => "perfect" }) %>
    <%= submit_tag 'さがす', class: "btn btn-info btn-sm" %>
  <% end %>
</div>