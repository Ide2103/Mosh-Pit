<h6 class="ml-5">会員の方はこちらからログインしましょう</h6>

<div class="card w-75 p-3 mx-auto mt-2">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group row">
    <%= f.label :name, class: "col-4 col-form-label" %><br />
    <div class="form-group col-6">
      <%= f.text_field :name, autofocus: true, autocomplete: "ニックネーム", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :email, class: "col-4 col-form-label" %><br />
    <div class="form-group col-6">
      <%= f.email_field :email, autocomplete: "メールアドレス", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password, class: "col-4 col-form-label" %><br />
    <div class="form-group col-6">
      <%= f.password_field :password, autocomplete: "パスワード", class: 'form-control' %>
    </div>
  </div>

  <div class="actions d-flex justify-content-center pt-3">
    <%= f.submit "ログインする", class: "btn btn-outline-info" %>
  </div>
<% end %>

<%= render "user/shared/links" %>
</div>
