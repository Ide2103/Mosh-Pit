<h6>ログイン画面</h6>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "ニックネーム" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "パスワード" %>
  </div>

  <div class="actions pt-3">
    <%= f.submit "ログインする", class: "btn btn-outline-info" %>
  </div>
<% end %>

<%= render "user/shared/links" %>
