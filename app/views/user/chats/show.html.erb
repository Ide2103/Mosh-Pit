<div class="card w-75 mx-auto my-2 shadow-sm overflow-auto">
  <div class="card-header d-flex justify-content-start align-items-center font-weight-bolder text-white bg-info">
    <%= image_tag @user.get_icon_image(50, 50), class: "border rounded-circle mr-3" %>
    <%= @user.name %>
  </div>
  <div class="card-body">
      <% @chats.each do |chat| %>
        <% if chat.user_id == current_user.id %>
          <div class="d-flex justify-content-end">
            <p class="rounded bg-secondary text-white"><%= chat.message %></p>
          </div>
        <% else %>
          <div class="d-flex justify-content-start">
            <p class="rounded bg-info text-white"><%= chat.message %></p>
          </div>
        <% end %>
      <% end %>
  </div>
  <div class="card-footer d-flex justify-content-end">
    <%= form_with model: @chat do |f| %>
      <%= f.text_field :message, placeholder:"メッセージを入力" %>
      <%= f.hidden_field :room_id %>
      <%= f.submit "送信", class: "btn btn-info btn-sm chat-btn" %>
    <% end %>
  </div>
  <div class="error-alert"></div>
</div>