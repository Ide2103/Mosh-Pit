document.getElementById('post_comment_<%= @post.id %>').innerHTML = '<%= j(render partial: '/user/post_comments/comment', locals: { post_comments: @post.post_comments, post: @post }) %>'
document.getElementById('comment_counts').innerHTML = '<%= j(render partial: '/user/post_comments/comment_icon', locals: { post: @post }) %>'
document.getElementById('post_comment_comment').value = '';
<% if flash[:alert] %>
document.getElementById('flash-alert').innerHTML = '<%= flash[:alert] %>';
document.getElementById('flash-alert').classList.remove("d-none");
<% else %>
document.getElementById('flash-alert').classList.add("d-none");
document.getElementById('flash-alert').innerHTML = '';
<% end %>
<% flash.clear %>